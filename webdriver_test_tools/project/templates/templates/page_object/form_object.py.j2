{% if not use_yaml %}
    # REQUIRED: Locator for the form element
    FORM_LOCATOR = None
    # REQUIRED: Locator for the form submit button
    SUBMIT_LOCATOR = None

    # REQUIRED: Dictionary mapping input names to the corresponding
    # prototypes.InputObject instances
    # TODO: re-work to support non-YAML
